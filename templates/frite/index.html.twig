{% extends 'base.html.twig' %}

{% block title %}Frite index{% endblock %}

{% block body %}
    <h1>Frite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Image</th>
                <th>Prix</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for frite in frites %}
            <tr>
                <td>{{ frite.id }}</td>
                <td>{{ frite.libelle }}</td>
                <td>{{ frite.image }}</td>
                <td>{{ frite.prix }}</td>
                <td>
                    <a href="{{ path('frite_show', {'id': frite.id}) }}">show</a>
                    <a href="{{ path('frite_edit', {'id': frite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('frite_new') }}">Create new</a>
{% endblock %}
